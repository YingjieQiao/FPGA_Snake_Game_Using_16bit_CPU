module shift_right (
    input a[16],
    input b[16],
    output out[16]
  ) {
  sig x[16];
  sig y[16];
  sig z[16];
  sig s[16];
  always {
    if (b[3]) {
      x[7:0] = a[15:8];
      x[15:8] = 8b0;
    } else x = a;
    if (b[2]){
      y[11:0] = x[15:4];
      y[15:12] = 4b0;
    } else y = x;
    if(b[1]){
      z[13:0] = y[15:2];
      z[15:14] = 2b0;
    } else z = y;
    if(b[0]){
      s[14:0] = z[15:1];
      s[15] = b0;
    } else s = z;
    out = s;
}