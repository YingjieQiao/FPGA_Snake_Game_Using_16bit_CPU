module shift_left (
    input a[16],
    input b[16],
    output out[16]
  ) {
  sig x[16];
  sig y[16];
  sig z[16];
  sig s[16];
  always {
    if (b[3]) {
      x[7:0] = 8b0;
      x[15:8] = a[7:0];
    } else x = a;
    if (b[2]){
      y[3:0] = 4b0; 
      y[15:4] = x[11:0];
    } else y = x;
    if(b[1]){
      z[1:0] = 2b0;
      z[15:2] = y[13:0];
    } else z = y;
    if(b[0]){
      s[0] = b0;
      s[15:1] = z[14:0];
    } else s = z;
    out = s;
}
